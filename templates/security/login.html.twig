{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    #footer {
        position: absolute;
        right: 0;
        bottom: 0;
        left: 0;
        text-align: center;
        background: #263f49;
        padding: 0 100px 15px 0;
        color: #fff;
        font-size: 14px;
    }
</style>

{% endblock %}

{% block body %}


<div class="wrapper zero-raduis">
    <div id="formContent">
        <div class="first">
            <h2 class="my-3">Connexion</h2>
        </div>

        {# Login Form #}
        <form method="post">
            {% if error %}
            <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
            {% endif %}
            {# Flashes message #}
            {% import 'macros/alertes.html.twig' as flash %}
            {{ flash.alert(app.flashes) }}

            <label for="inputUsername">Nom d'utilisateur</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                autocomplete="username" required autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control"
                autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div id="formFooter">
                <a class="underlineHover" href="{{ path('app_forgot_password') }}">Mot de passe oubli√© ?</a>
                <a href="{{ path('app_register') }}" class="underlineHover register-mobile">S'inscrire</a>
            </div>
            <button class="btn btn-lg btn-primary fourth zero-raduis" type="submit">
                Se connecter
            </button>
            
        </form>


    </div>
</div>
{% endblock %}