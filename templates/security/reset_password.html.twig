{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    #footer {
        position: absolute;
        right: 0;
        bottom: 0;
        left: 0;
        text-align: center;
        background: #263f49;
        padding: 0 100px 15px 0;
        color: #fff;
        font-size: 14px;
    }
</style>

{% endblock %}

{% block body %}
<div class="wrapper zero-raduis">
    <div id="formContent">

        <div class="first">
            <h2 class="my-3">Réinitialisation du mot de passe</h2>
            <p>Veuillez entrer votre nouveau mot de passe ci-dessous.</p>
        </div>

        {{ form_start(form) }}
            {{ form_row(form.password) }}
            <input type="hidden" name="token" value="{{ token }}">
            <button type="submit" id="valider">
                Valider
            </button>
        {{ form_end(form) }}

    </div>
</div>
{% endblock %}