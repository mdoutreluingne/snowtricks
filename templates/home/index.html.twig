{% extends 'base.html.twig' %}

{% block body %}
<!-- ======= Hero Section ======= -->
<section id="hero">
    <div class="hero-container" data-aos="fade-up">
        <h1>Bienvenue sur SnowTricks</h1>
        <h2>LE site communautaire 100% snowboard !</h2>
        {# Arrow that allows you to go down to the figures section #}
        <a href="#tricks" class="btn-get-started scrollto"><i class="fas fa-chevron-down"></i></a>
    </div>
</section><!-- End Hero -->

<main id="main">

    <!-- ======= Services Section ======= -->
    <section id="tricks" class="services">
        <div class="container">

            <div class="section-title" data-aos="fade-in" data-aos-delay="100">
                <h2>Figures</h2>
            </div>

            <div class="row">
                {% for i in 0..3 %}
                    <div class="col col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12">
                        <div class="card">
                            <img src="https://c0.wallpaperflare.com/preview/483/210/436/car-green-4x4-jeep.jpg"
                                alt="rover" class="img-fluid"/>
                            <div class="card-body">
                                <span class="tag tag-teal">Technology</span>
                                <h4>
                                    <a href="" class="title_trick">
                                        Why is the Tesla Cybertruck
                                    </a>
                                </h4>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>  
        </div>
    </section><!-- End Services Section -->

    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-3">
                <a href="" class="btn btn-info">Voir plus</a>
            </div>
        </div>
    </div>

</main>

{# Arrow that allows you to go to the top of the "figures" section if there are more than 15 figures displayed #}
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="fas fa-chevron-up"></i></a>
{% endblock %}